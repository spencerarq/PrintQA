# dockerfile.tests - Versão melhorada

FROM python:3.12-slim-bookworm

WORKDIR /app

# --- Instalação de Dependências de Sistema ---
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    default-libmysqlclient-dev \
    curl \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# --- Instalação de Dependências Python ---
COPY requirements.txt .
# Copiar requirements de desenvolvimento se existir
COPY requirements-dev.txt* ./
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt && \
    (pip install --no-cache-dir -r requirements-dev.txt 2>/dev/null || true)

# --- Cópia do Código da Aplicação e Testes ---
COPY ./printqa ./printqa
COPY ./tests ./tests
COPY ./scripts ./scripts
COPY ./app ./app
COPY pytest.ini .
COPY conftest.py .
RUN mkdir -p /app/reports
# --- Criar usuário não-root para segurança ---
RUN addgroup --system testuser && adduser --system --group testuser
RUN chmod +x ./app/*.sh
RUN chown -R testuser:testuser /app
USER testuser
ENTRYPOINT ["./app/run_local_tests.sh"]